<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agora vamos realizar o teste para o lado esquerdo:"
        android:id="@+id/textViewEsq"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        android:layout_weight="0.08"
        android:textColor="#FF6E1009"
        android:textIsSelectable="false"
        android:textSize="30sp"
        android:textAlignment="center" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clique se estiver ouvindo:"
        android:id="@+id/textView2Esq"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="#FF6E1009"
        android:textIsSelectable="false"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ok"
        android:onClick="ouviu"
        android:id="@+id/btn_okEsq"
        android:background="#747474"
        android:textColor="#FF6E1009"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/freqEsq"
        android:textColor="#FF6E1009"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.08" />
</LinearLayout>